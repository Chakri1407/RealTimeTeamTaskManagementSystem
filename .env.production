# Socket.IO Configuration
# Update with your Vercel deployment URL
SOCKET_CORS_ORIGIN=https://your-project-name.vercel.app

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

